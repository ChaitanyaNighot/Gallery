<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" android:background="@drawable/login_background"
    tools:context="com.example.hites.myapplication.Signup">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:background="#b9c9f1"
        android:textColor="#1f1d36"
        android:textColorHint="#1f1d36"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/edit3"
        android:hint=" FirstName"
         />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/edit5"
        android:hint=" E-mail"
        android:background="#b9c9f1"
        android:textColor="#1f1d36"
        android:layout_marginLeft="30dp"
        android:textColorHint="#1f1d36"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/edit3"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:inputType="phone"
        android:ems="10"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="24dp"
        android:id="@+id/edit6"
        android:hint=" Phone No."
        android:background="#b9c9f1"
        android:textColor="#1f1d36"
        android:textColorHint="#1f1d36"
        android:layout_below="@+id/edit5" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginLeft="30dp"
        android:background="#b9c9f1"
        android:textColor="#1f1d36"
        android:textColorHint="#1f1d36"
        android:layout_below="@+id/edit6"
        android:layout_marginTop="18dp"
        android:id="@+id/edit7"
        android:hint=" Password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginLeft="30dp"
        android:id="@+id/edit8"
        android:background="#b9c9f1"
        android:textColor="#1f1d36"
        android:textColorHint="#1f1d36"
        android:hint=" Confirm Password"
        android:layout_below="@+id/edit7"
        android:layout_marginTop="10dp" />

    <Button
        android:text="SIgnup"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:id="@+id/Signup"
        android:textStyle="bold"
        android:textColor="#edeef7"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/edit8"
        android:background="@drawable/button_book" />



</RelativeLayout>
